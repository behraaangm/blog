<%= link_to post.title, post_path(id: post.id), style: 'font-size: 30px', class:'with-decoration' %><br />
<span class="text-small">
  <%= post.created_at.strftime('%B %d, %Y') %>.
  <% if post.tags.any? %>
    Tagged
    <% post.tags&.each do |tag| %>
      <%= link_to(tag.name, tag_path(id: tag.id), class:'with-decoration') %>
    <% end %>
  <% end %>
</span>
<br />